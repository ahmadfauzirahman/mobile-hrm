<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnLogAbsensi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogAbsensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="6dp"
        app:cardPreventCornerOverlap="true">

        <TextView
            android:id="@+id/midTbAbsensi"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/id_pegawai"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/nipPegawai"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/lat"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/lng"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hari_masuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="Senin"
                        android:textColor="#000"
                        android:textSize="19dp" />


                    <TextView
                        android:id="@+id/jam_masuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/quicksandlight"
                        android:text="07:30 PM"
                        android:textColor="#000"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/status_hadir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/quicksandlight"
                        android:text="Hadir"
                        android:textColor="#000"
                        android:textSize="19dp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
