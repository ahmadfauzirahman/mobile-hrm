<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MyTeamActivity">

    <TextView
        android:id="@+id/tv_my_Team01"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:text="@string/my_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_my_team"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv_my_Team01"
        android:layout_width="match_parent"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/item_my_team"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/view_my_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>