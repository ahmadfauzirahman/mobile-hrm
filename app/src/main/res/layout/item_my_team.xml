<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_my_team"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_my_team"
        android:src="@drawable/user"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tv_name_my_team"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/civ_my_team"
        android:layout_marginStart="30dp"
        android:text="Nama Lengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_nip_my_team"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/civ_my_team"
        android:layout_below="@+id/tv_name_my_team"
        android:text="1238738746736"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_arrow_right_24"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</RelativeLayout>